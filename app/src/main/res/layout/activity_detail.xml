<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6E4E5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama" />

        <TextView
            android:id="@+id/tv_sejarah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sejarah"/>

        <TextView
            android:id="@+id/tv_luas_bandara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas bandara" />

        <TextView
            android:id="@+id/tv_kota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota"/>

        <TextView
            android:id="@+id/tv_tahun_berdiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahun berdiri"/>
    </LinearLayout>

</ScrollView>